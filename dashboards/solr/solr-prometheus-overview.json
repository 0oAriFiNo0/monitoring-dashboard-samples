            },
            "dataSets": [
              {
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "solr_core_cumulative_hits{name=\"queryResultCache\",${Cluster},${Location},${Namespace}}"
                }
              },
              {
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "solr_core_cumulative_lookups{name=\"queryResultCache\",${Cluster},${Location},${Namespace}}"
                }
              }
