{
  "displayName": "Best Effort workloads at risk - resource (CPU/Memory) request not set",
  "documentation": {
    "content": "CPU can be throttled to 0 causing your workloads to become unresponsive or \tkubelet can stop your Pods, at any time, and mark them as failed.",
    "mimeType": "text/markdown"
  },
  "userLabels": {
    "type": "besteffort"
  },
  "conditions": [
    {
      "displayName": "GKE Best Effort workload - CPU not set",
      "conditionThreshold": {
        "aggregations": [
          {
            "alignmentPeriod": "86400s",
            "crossSeriesReducer": "REDUCE_MEAN",
            "groupByFields": [
              "resource.label.project_id",
              "resource.label.location",
              "resource.label.cluster_name",
              "resource.label.namespace_name",
              "metadata.system_labels.top_level_controller_name"
            ],
            "perSeriesAligner": "ALIGN_MEAN"
          }
        ],
        "comparison": "COMPARISON_LT",
        "duration": "43200s",
        "evaluationMissingData": "EVALUATION_MISSING_DATA_NO_OP",
        "filter": "resource.type = \"k8s_container\" AND resource.labels.namespace_name != \"kube-system\" AND metric.type = \"kubernetes.io/container/cpu/request_cores\"",
        "thresholdValue": 0.0001,
        "trigger": {
          "percent": 30
        }
      }
    },
    {
      "displayName": "GKE Best Effort workloads memory not set",
      "conditionThreshold": {
        "aggregations": [
          {
            "alignmentPeriod": "300s",
            "crossSeriesReducer": "REDUCE_MEAN",
            "groupByFields": [
              "resource.label.project_id",
              "resource.label.location",
              "resource.label.cluster_name",
              "resource.label.namespace_name",
              "metadata.system_labels.top_level_controller_name"
            ],
            "perSeriesAligner": "ALIGN_MEAN"
          }
        ],
        "comparison": "COMPARISON_LT",
        "duration": "43200s",
        "filter": "resource.type = \"k8s_container\" AND resource.labels.namespace_name != \"kube-system\" AND metric.type = \"kubernetes.io/container/memory/request_bytes\"",
        "thresholdValue": 0.0001,
        "trigger": {
          "percent": 30
        }
      }
    }
  ],
  "alertStrategy": {
    "autoClose": "604800s"
  },
  "combiner": "OR",
  "enabled": true
}
